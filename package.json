{
  "name": "olivine-vscode",
  "displayName": "Olivine for VSCode",
  "description": "An Obsidian-like vault reader for VS Code.",
  "version": "0.0.1",
  "publisher": "rberenguel",
  "repository": "https://github.com/rberenguel/olivine",
  "engines": {
    "vscode": "^1.85.0"
  },
  "license": "MIT",
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:olivine.openVault",
    "onView:olivineSidebarView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "olivine.openVault",
        "title": "Olivine: Open Vault"
      },
      {
        "command": "olivine.splitVertical",
        "title": "Olivine: Split Vertically"
      },
      {
        "command": "olivine.splitHorizontal",
        "title": "Olivine: Split Horizontally"
      }
    ],
    "keybindings": [
      {
        "command": "olivine.splitVertical",
        "key": "ctrl+p |",
        "when": "webviewPanel.active && webviewPanel.viewType == 'olivine'"
      },
      {
        "command": "olivine.splitHorizontal",
        "key": "ctrl+p -",
        "when": "webviewPanel.active && webviewPanel.viewType == 'olivine'"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "olivine-sidebar",
          "title": "Olivine",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "olivine-sidebar": [
        {
          "id": "olivineSidebarView",
          "name": "Vault Explorer"
        }
      ]
    }
  }
}
